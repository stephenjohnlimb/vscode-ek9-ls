{
	"name": "ek9-ls",
	"displayName": "EK9 Extension",
	"description": "Language Server Extension for EK9",
	"version": "0.0.1",
	"publisher": "stephenjohnlimb",
	"repository": "https://github.com/stephenjohnlimb/vscode-ek9-ls",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [],
	"activationEvents": [
		"onLanguage:ek9"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "EK9 Java Command",
			"properties": {
				"ek9-ls.javaCommand": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "The file path to Java."
				},
				"ek9-ls.compilerPath": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "The file path to ek9.jar."
				}
			}
		},
		"languages": [
			{
				"id": "ek9",
				"aliases": [
					"ek9"
				],
				"extensions": [
					".ek9"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ek9",
				"scopeName": "source.ek9",
				"path": "./syntaxes/ek9.tmLanguage"
			}
		],
		"commands": [
			{
				"command": "ek9-ls.restartServer",
				"title": "EK9 Language Server: Restart server"
			},
			{
				"command": "ek9-ls.killServer",
				"title": "EK9 Language Server: Kill server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/node": "^12.12.6",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"typescript": "^4.1.2",
		"eslint": "^7.15.0"
	}
}
